.panel.panel-default(ng-init="getReplies()").view-topic
  .panel-heading
    .view-topic-heading
      .view-topic-title
        p
          | {{ t.title }}
      .view-topic-info
        p 
          | Created by 
          a(href="/#!/user/{{u.value.id}}") {{ u.value.username }}
          |  at {{ t.created | date: 'yyyy-MM-dd hh:mm:ss EEEE'}}
          |  with {{ t.replies_count }} post(s).
    .view-topic-avatar
      .topic-list-image
        a(href="/#!/user/{{u.value.id}}")
          img(ng-src="//www.gravatar.com/avatar/{{ u.value.email | gravatar }}")
  .panel-body
    p.view-reply-head
      ng-pluralize(count="t.replies_count" when="{'0': 'No Discussion', 'one': 'Discussion(1)', 'other': 'Discussions({})'}")
    .view-reply-box(ng-repeat="r in replies")
      .view-reply-content(ng-bind-html="r.content_html")
      .view-reply-info
        p
          a(href="/#!/user/{{u.value.id}}")
          img(ng-src="//www.gravatar.com/avatar/{{ u.value.email | gravatar }}")
          | by {{ r.author }} at {{ r.created | date: 'yyyy-MM-dd hh:mm:ss EEEE'}}
      p.view-reply-end
        | EOF
