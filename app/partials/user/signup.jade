.row
  .col-lg-12
    .panel.panel-primary
      .panel-heading
        strong Signup
      .panel-body
        form.form-horizontal(role='form', ng-submit='signup()')
          .form-group
            label.col-sm-2.control-label(for='username') username
            .col-sm-10
              input#username.form-control(type='username', name='username', placeholder='username', ng-model='username')
          .form-group
            label.col-sm-2.control-label(for='email') Email
            .col-sm-10
              input#email.form-control(type='email', name='email', placeholder='Email', ng-model='email')
          .form-group
            label.col-sm-2.control-label(for='password') Password
            .col-sm-10
              input#password.form-control(type='password', name='password', placeholder='Password', ng-model='password')
          .form-group
            .col-sm-offset-2.col-sm-10
              button.btn.btn-default(type='submit') Sign up
